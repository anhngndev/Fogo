<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:id="@+id/layout_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/margin8"
            android:layout_height="@dimen/margin8"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin4"
            android:background="@drawable/border_transition_black_fill"
            android:padding="10dp"
            android:src="@drawable/back" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_tittle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@drawable/top_border_20_white_fill"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_sign_up"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin4"
            android:layout_marginTop="@dimen/margin4"
            android:layout_weight="1.4"
            android:fontFamily="@font/raleway_black"
            android:gravity="center_vertical"
            android:text="@string/sign_up_big"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size5"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/describe_login"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin4"
            android:layout_weight="1.4"
            android:fontFamily="@font/raleway"
            android:gravity="top"
            android:text="@string/describe_sign_up"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size2"
            tools:ignore="SmallSp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="3">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin4"
            android:layout_marginTop="@dimen/margin6"
            android:background="@drawable/edit_text_selector"
            android:drawablePadding="@dimen/margin4"
            android:fontFamily="@font/raleway"
            android:hint="@string/full_name"
            android:inputType="text"
            android:paddingStart="@dimen/margin3"
            android:textCursorDrawable="@color/blue"
            android:textSize="@dimen/text_size2" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin4"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/edit_text_selector"
            android:drawableStart="@drawable/black_icon_mail"
            android:drawablePadding="@dimen/margin4"
            android:fontFamily="@font/raleway"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/margin3"
            android:textCursorDrawable="@color/blue"
            android:textSize="@dimen/text_size2" />

        <EditText
            android:id="@+id/password"

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin4"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/edit_text_selector"
            android:drawableStart="@drawable/black_icon_lock"
            android:drawablePadding="@dimen/margin4"
            android:fontFamily="@font/raleway"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/margin3"
            android:textCursorDrawable="@color/blue"
            android:textSize="@dimen/text_size2" />

        <EditText
            android:id="@+id/pass_again"

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin4"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/edit_text_selector"
            android:drawableStart="@drawable/black_icon_lock"
            android:drawablePadding="@dimen/margin4"
            android:enabled="true"
            android:fontFamily="@font/raleway"
            android:hint="@string/password_again"
            android:inputType="textPassword"
            android:paddingStart="@dimen/margin3"
            android:textCursorDrawable="@color/blue"
            android:textSize="@dimen/text_size2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/margin7"
            android:layout_marginTop="@dimen/margin9"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/button_sign_up"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/borde_5_blue_fill"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:text="@string/sign_up_normal"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin7"
            android:layout_marginTop="@dimen/margin2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/raleway"
                android:text="@string/link_to_send_otp"
                android:textSize="@dimen/text_size0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin1"
                android:fontFamily="@font/raleway"
                android:text="@string/resend"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/text_size0" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="0.5" >

        <ImageView
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bottom_blue_1" />

        <ImageView
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bottom_blue_2" />
    </RelativeLayout>

</LinearLayout>